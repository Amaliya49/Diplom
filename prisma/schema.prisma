generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
  UNISEX
}

enum Role {
  CUSTOMER
  ADMIN
}

model Customer {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  image String?
  role Role @default(CUSTOMER)

  favoriteSizes FavoriteSize[] 
}

model Region {
  id   Int    @id @default(autoincrement())
  code String
  name String @unique

  sizes Size[]         
}

model Category {
  id   Int    @id @default(autoincrement())
  name String

  sizes Size[]        
}

model Size {
  id          Int    @id @default(autoincrement())
  category_id Int
  region_id   Int
  label       String

  category      Category        @relation(fields: [category_id], references: [id])
  region        Region          @relation(fields: [region_id], references: [id])

  favoriteSizes FavoriteSize[]
  fromConversions Conversion[]  @relation("FromSizeConversions")
  toConversions   Conversion[]  @relation("ToSizeConversions")
}

model Conversion {
  id           Int @id @default(autoincrement())
  from_size_id Int
  to_size_id   Int

  fromSize Size @relation("FromSizeConversions", fields: [from_size_id], references: [id])
  toSize   Size @relation("ToSizeConversions", fields: [to_size_id], references: [id])
}

model FavoriteSize {
  id          Int     @id @default(autoincrement())
  customer_id Int
  title       String
  description String?
  gender      Gender
  size_id     Int

  customer Customer @relation(fields: [customer_id], references: [id])
  size     Size     @relation(fields: [size_id], references: [id])
}